@model IEnumerable<PathToJannah.Models.Allah_name>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <title>Names of Allah</title>
    <style>
       

        tr td{
            width: fit-content;
        }
    </style>
</head>
<body>
    <h1 align="center">99 Names of Allah </h1>
    <table class="table table-danger table-hover " >
        <tr align="center">
            <td>
                <h3>Serial No.</h3>
            </td>
            <td>
                <h3>@Html.DisplayNameFor(model => model.Name)</h3>
                
            </td>
            <td>
                <h3>@Html.DisplayNameFor(model => model.Meaning)</h3>
            </td>
            
        </tr>
    
    @foreach (var item in Model) {
        <tr align="center">
            <td>
                @Html.DisplayFor(modelItem => item.A_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Meaning)
            </td>
            
        </tr>
    }
    
    </table>
</body>
</html>
