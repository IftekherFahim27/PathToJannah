@model PathToJannah.Models.Admin


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <title>Login</title>
    <style>

        #login-div {
            position: absolute;
            left: 40%;
            top: 40%;
            background-color: darksalmon;
            border: 1px solid #ccc;
            padding: 10px 10px 10px 10px;
        }

        .field-validation-error {
            color: red;
        }

        .active {
            background-color: rgb(238, 238, 238);
            color: brown;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">

        <div class="container">

            <div class="navbar-header">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#bs-example-navbar-collapse-1" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <h3 style="color: crimson; margin-top: 12px">PATH TO JANNAH</h3>


                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("Index", "AdminLogin")">Admin</a></li>
                    <li class="active"><a href="@Url.Action("Index", "Login")">Login</a></li>
                    <li><a href="@Url.Action("AddorEdit", "User")">Register</a></li>
                    <li>@Html.ActionLink("Blog", "About", "Home")</li>
                    <li>@Html.ActionLink("Donation", "Contact", "Home")</li>
                    <li>@Html.ActionLink("About us", "", "")</li>

                </ul>
            </div>
        </div>

    </nav>
    <div class="col-xs-4">
        <div class="form-horizontal">
            <h3 align="center" style="margin-top: 150px;padding-left:30px ;font-size: 40px; color: greenyellow"> Admin SIGN IN</h3>
            @using (Html.BeginForm("Admin_Authorize", "AdminLogin", FormMethod.Post))
            {

                <table align="center" style="padding: 10px">
                    <tbody>
                        <tr>

                            <td style="padding-right:10px">
                                @Html.LabelFor(ad => ad.email)
                            </td>


                            <td>
                                @Html.EditorFor(ad => ad.email)
                            </td>

                        </tr>
                        <tr>
                            <td></td>
                            <td>@Html.ValidationMessageFor(ad => ad.email)</td>

                        </tr>

                        <tr><td><br /></td></tr>
                        <tr>

                            <td style="padding-right:10px">
                                @Html.LabelFor(ad => ad.pass)
                            </td>
                            <td>
                                @Html.EditorFor(ad => ad.pass)
                            </td>
                        </tr>

                        <tr>
                            <td></td>
                            <td>@Html.ValidationMessageFor(ad => ad.pass)</td>
                        </tr>

                        <tr>
                            <td colspan="2">
                                <label class="field-validation-error">@Html.DisplayFor(ad => ad.LoginErrorMessage)</label>

                            </td>
                        </tr>


                        <tr>
                            <td></td>
                            <td>
                                <input type="submit" name="name" value="Login" class="btn btn-success" />
                                <input type="reset" name="name" value="Clear" class="btn btn-danger" />
                            </td>
                        </tr>
                    </tbody>



                </table>


            }

        </div>
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
