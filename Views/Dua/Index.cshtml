@model IEnumerable<PathToJannah.Models.Dua>

@{
    ViewBag.Title = "Index";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="~/Content/StyleSheet1.css">

<style>


    .card {
        background-image: linear-gradient(rebeccapurple,pink);
        box-shadow: 6px 8px 6px black;
    }

        .card:hover {
            box-shadow: 6px 12px 6px pink;
        }

    .modal-content {
        background-color: lemonchiffon;
    }

    .thumbnail {
        background-color: khaki;
    }
</style>

<h1 align="center" style="color: yellow">Important Dua's</h1>
<table class="table">
    @foreach (var item in Model)
    {

        <div class="col-xs-12 col-sm-4 col-md-4 col-lg-3">
            <div class="thumbnail">

                <a href="" data-toggle="modal" data-target="#@item.DU_ID">
                    <img src="~/images/final.png">

                    <!-- <a href="Pictures/gallery/g1.jpg"><img src="Pictures/gallery/g1.jpg"></a>-->
                </a>
                <h5 align="center">Dua Name : @Html.DisplayFor(modelItem => item.Name)</h5>



                <div id="@item.DU_ID" class="modal fade" role="dialog">
                    <div class="modal-dialog">



                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title text-center">Dua : @Html.DisplayFor(modelItem => item.Name)</h4>
                            </div>
                            <div class="modal-body">
                                <p>
                                    @Html.DisplayFor(modelItem => item.Dua_txt)
                                </p>
                                <p>
                                    <h4>Meaning : </h4>
                                </p>
                                <p>
                                    @Html.DisplayFor(modelItem => item.Dua_meaning)
                                </p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>

    }

</table>



