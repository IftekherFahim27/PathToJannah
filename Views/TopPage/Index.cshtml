
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/StyleSheet1.css">

    <style>
        .active {
            background-color: rgb(238, 238, 238);
            color: brown;
        }
        .card {
            background-image: linear-gradient(rebeccapurple,pink);
            box-shadow: 6px 8px 6px black;
        }

        .card:hover {
            box-shadow: 6px 12px 6px pink;
         }
    </style>


</head>
<body>

    <div>

        @using (Html.BeginForm("Index", "TopPage", FormMethod.Post))
        {

            <nav class="navbar navbar-expand-lg navbar-light bg-light">

                <div class="container">

                    <div class="navbar-header">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#bs-example-navbar-collapse-1" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                    </div>
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">

                            <h3 style="color: crimson; margin-top: 12px">Welcome in PATH TO JANNAH</h3>


                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="@Url.Action("Index", "Login")"><i class="fa fa-user"></i> Login</a></li>
                            <li><a href="@Url.Action("AddorEdit", "User")"><i class="fa fa-user-plus"></i> Register</a></li>
                            <li><a href="#"><i class="fa fa-users"></i> About Us</a></li>
                            <li><a href="@Url.Action("Index", "AdminLogin")"><i class="fa fa-lock"></i> Admin</a></li>
                        </ul>
                    </div>
                </div>

            </nav>
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 d-flex align-items-stretch">
                        <div class="card" style="width: 18rem;">
                            <img class="card-img-top" src="~/images/Allah.png" alt="Card image cap" style="margin-top: 5px">
                            <div class="card-body">
                                <h5 class="card-title" style="font-weight:bold">99 Names of Allah</h5>
                                <p class="card-text">Names of Allah in Islam (Arabic: أَسْمَاءُ ٱللَّٰهِ ٱلْحُسْنَىٰ ʾasmāʾu llāhi l-ḥusnā, "Allah's Beautiful Names") are names attributed to Allah in Islam by Muslims.</p>
                                
                                <table align="center" style="margin-top: 30px;">
                                    <tr>
                                        <td>
                                            <a href="@Url.Action("Index", "NamesofAllah")" class="btn btn-primary">Names of Allah</a>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3 d-flex align-items-stretch">
                        <div class="card" style="width: 18rem;">
                            <img class="card-img-top" src="~/images/12.png" alt="Card image cap" style="margin-top: 5px">
                            <div class="card-body">
                                <h5 class="card-title align-items-center" style="font-weight:bold">Dua</h5>
                                <p class="card-text">Dua is a prayer of invocation, supplication or request, even asking help or assistance from Allah.</p>
                                
                                <table align="center" style="margin-top: 70px;">
                                    <tr>
                                        <td>
                                            <a href="@Url.Action("Index", "Dua")" class="btn btn-primary">Important Dua</a>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>


                    <div class="col-lg-3 d-flex align-items-stretch">
                        <div class="card" style="width: 18rem;">
                            <img class="card-img-top" src="~/images/hadith.png" alt="Card image cap" style="margin-top: 5px">
                            <div class="card-body">
                                <h5 class="card-title" style="font-weight:bold">Hadith</h5>
                                <p class="card-text">Hadith is a report attributed to the Prophet Muhammad, describing his words and actions and representing the chief source for knowing his authoritative precedent (Sunna).</p>
                                
                                <table align="center">
                                    <tr>
                                        <td>
                                            <a href="@Url.Action("Index", "Hadith")" class="btn btn-primary">Important Hadith</a>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>


                    <div class="col-lg-3 d-flex align-items-stretch">
                        <div class="card" style="width: 18rem;">
                            <img class="card-img-top" src="~/images/surah-removebg-preview.png" alt="Card image cap" style="margin-top: 5px">
                            <div class="card-body">
                                <h5 class="card-title" style="font-weight:bold">Surah</h5>
                                <p class="card-text">Surah, also spelled sura, Arabic sūrah, chapter in the sacred scripture of Islam, the Qurʾān</p>
                                
                                <table align="center"  style="margin-top: 90px;">
                                    <tr>
                                        <td>
                                            <a href="@Url.Action("Index", "Surah")" class="btn btn-primary">Important Surah</a>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        }


    </div>



</body>
</html>
