@model IEnumerable<PathToJannah.Models.Donation>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="~/Content/StyleSheet1.css">
<!DOCTYPE html>

<div class="sidenav">
    <ul class="nav nav-tabs">
        <li><a class="nav-link" href="@Url.Action("Index", "UserHome")"><i class="fa fa-user-circle"></i> User Profile</a></li>
        <li><a href="@Url.Action("Index","Blog")"><i class="fa fa-pencil-square-o"></i> Blog</a></li>
        <li class="active"><a href="@Url.Action("Index","Donation")"><i class="fa fa-money"></i> Donation</a></li>
        <li><a href="@Url.Action("LogOut","Login")"><i class="fas fa-sign-out-alt"></i> Log Out</a></li>
    </ul>
</div>
<div class="main">
    <table class="table">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.T_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.t_time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.state)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.T_ID
                </td>
                <td>
                    @item.t_time
                </td>
                <td>
                    @item.Amount
                </td>
                <td>
                    @item.state
                </td>


            </tr>
        }

    </table>
</div>