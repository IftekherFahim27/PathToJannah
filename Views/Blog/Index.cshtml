@model IEnumerable<PathToJannah.Models.Blog>




<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="~/Content/StyleSheet1.css">
<!DOCTYPE html>
<html>

<div class="sidenav">
    <ul class="nav nav-tabs">
        <li><a class="nav-link" href="@Url.Action("Index", "UserHome")"><i class="fa fa-user-circle"></i> User Profile</a></li>
        <li class="active"><a href="@Url.Action("Index","Blog")"><i class="fa fa-pencil-square-o"></i> Blog</a></li>
        <li><a href="@Url.Action("Index","Donation")"><i class="fa fa-money"></i> Donation</a></li>
        <li><a href="@Url.Action("LogOut","Login")"><i class="fas fa-sign-out-alt"></i> Log Out</a></li>
    </ul>
</div>

<body>
    <div class="main">
    <table class="table">
        @foreach (var item in Model)
        {

            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-3">
                <div class="thumbnail">

                    <a href="" data-toggle="modal" data-target="#@item.P_ID">
                        <img src="~/images/Dua.png">


                    </a>
                    <h5 align="center">Post Date : @Html.DisplayFor(modelItem => item.P_Date)</h5>
                    <h5 align="center">Who Posted : @Html.DisplayFor(modelItem => item.U_ID)</h5>


                    <div id="@item.P_ID" class="modal fade" role="dialog">
                        <div class="modal-dialog">



                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title text-center">Posted On : @Html.DisplayFor(modelItem => item.P_Date)</h4>
                                </div>
                                <div class="modal-body">
                                    <p>
                                        @Html.DisplayFor(modelItem => item.Post)
                                    </p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>

        }

    </table>
        </div>
</body>
