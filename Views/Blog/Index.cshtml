@model IEnumerable<PathToJannah.Models.Blog>

@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<script src="jquery-3.4.1.min.js"></script>
<link rel="stylesheet" type="text/css" href="~/Content/StyleSheet3.css">
<!DOCTYPE html>
<html>
<body>
    <div class="sidenav">
        <ul class="nav nav-tabs">
            <li><a class="nav-link" href="@Url.Action("Index", "UserHome")"><i class="fa fa-user-circle"></i> User Profile</a></li>
            <li class="active"><a href="@Url.Action("Index","Blog")"><i class="fa fa-pencil-square-o"></i> Blog</a></li>
            <li><a href="@Url.Action("Index","Donation")"><i class="fa fa-money"></i> Donation</a></li>
            <li><a href="@Url.Action("LogOut","Login")"><i class="fas fa-sign-out-alt"></i> Log Out</a></li>
        </ul>
    </div>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Post)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.P_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Post)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.P_Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.P_ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.P_ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.P_ID })
                </td>
            </tr>
        }

    </table>
</body>
</html>
