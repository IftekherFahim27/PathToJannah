@model IEnumerable<PathToJannah.Models.Donation>

@{
    ViewBag.Title = "Index";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<script src="jquery-3.4.1.min.js"></script>
<link rel="stylesheet" type="text/css" href="~/Content/StyleSheet3.css">
<!DOCTYPE html>
<html>
<body>
    <div class="sidenav">
        <ul class="nav nav-tabs">
            <li><a class="nav-link" href="@Url.Action("Index", "UserHome")"><i class="fa fa-user-circle"></i> User Profile</a></li>
            <li><a href="@Url.Action("Index","AdminBlog")"><i class="fa fa-pencil-square-o"></i> Blog</a></li>
            <li class="active"><a href="@Url.Action("Index","AdminDonation")"><i class="fa fa-money"></i> Donation</a></li>
            <li><a href="@Url.Action("Index","AdminLogin")"><i class="fas fa-sign-out-alt"></i> Log Out</a></li>
        </ul>
    </div>

    <table class="table table-light table-hover ">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.T_ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.t_time)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.U_ID)
                </th>
                <th>
                    Action
                </th>

            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.T_ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.t_time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.U_ID)
                    </td>
                    <td>
                        @using (Html.BeginForm("Index", "AdminDonation", FormMethod.Post))
                        {
                            <button name="UpdateDonation" type="submit" value="UpdateDonation" class="btn btn-success">Approve</button>
                        }

                    </td>
                </tr>
            }
                </tbody>

</table>
    </body>
</html>
